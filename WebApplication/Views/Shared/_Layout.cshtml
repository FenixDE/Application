<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color:ghostwhite;
        }
        a {
            cursor:pointer;
        }
    </style>
</head>
<body>
    <div class="navbar-inverse navbar-fixed-top col-lg-12 col-xs-12">
        <div class="container">
            <div class="row">
                @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Факультеты", "Index", "Faculty")</li>
                    <li>@Html.ActionLink("Кафедры", "Index", "Department")</li>
                    <li>@Html.ActionLink("Группы", "Index", "Group")</li>
                </ul>
                @if (@*Request.IsAuthenticated*@false)
{
using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Здравствуйте!"@*, " + User.Identity.GetUserName() + "*@, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
}
}
else
{
    <div class="col-md-12 col-xs-12">
        <ul class="nav navbar-nav navbar-right">
            @*<li>@Html.ActionLink("Регистрация", "Register", "Account")</li>*@
            <li><a data-toggle="modal" data-target="#exampleModal">Регистрация &raquo;</a></li>
            <li><a data-toggle="modal" data-target="#exampleModal1">Вход &dArr;</a></li>
        </ul>
    </div>

}
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
        <div class="container body-content">
            <div class="row">
                <div class="col-md-10">
                    @RenderBody()
                </div>
                <div class="col-md-2">
                    <div class="row">Уведомление 1</div>
                    <div class="row">Уведомление 2</div>
                </div>
            </div>

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
